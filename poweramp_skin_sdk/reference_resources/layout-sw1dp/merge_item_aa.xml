<merge 
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:w="http://schemas.android.com/apk/res-auto"
>
	<!-- NOTE: this view is never visible in default themes, but can be used in 3rd party skins -->
	<View android:id="@+id/aa_panel"
		style="?ItemTrackAAPanel"
	/>
	<SceneParams w:scene="@+id/scene_aa"
		style="?ItemTrackAAPanel_scene_aa" 
	/>
	<SceneParams w:scene="@+id/scene_aa_vis"
		style="?ItemTrackAAPanel_scene_aa_vis"
	/>
	<SceneParams w:scene="@+id/scene_aa_playing"
		style="?ItemTrackAAPanel_scene_aa_playing"
	/>
	<SceneParams w:scene="@+id/scene_grid" w:scene_2="@+id/scene_grid_zoomed" w:scene_3="@+id/scene_zoomed" w:scene_4="@+id/scene_small" w:scene_5="@+id/scene_header"
		style="?ItemTrackAAPanel_scenes_hidden"  
	/> 
	<SceneParams w:scene="@+id/scene_item_menu" w:scene_2="@+id/scene_item_menu_lu"
		style="?ItemTrackAAPanel_scenes_hidden"
	/>
		
	<com.maxmpz.widget.player.list.LikeUnlikeLayout android:id="@+id/like_unlike_layout"
		style="?ItemLikeUnlikeLayout"
	>
	<com.maxmpz.widget.FastCheckBox android:id="@+id/like"
		style="?ItemLike"
	/>
		
	<SceneParams w:scene="@+id/scene_aa" w:scene_2="@+id/scene_aa_vis" w:scene_3="@+id/scene_aa_playing"
		style="?ItemLike_scene_aa"
	/>
	<SceneParams w:scene="@+id/scene_item_menu" w:scene_2="@+id/scene_item_menu_lu"
		style="?ItemLike_scene_item_menu"
	/>
					
	<com.maxmpz.widget.FastCheckBox android:id="@+id/unlike"
		style="?ItemUnlike"
	/>
	<SceneParams w:scene="@+id/scene_aa" w:scene_2="@+id/scene_aa_vis" w:scene_3="@+id/scene_aa_playing"
		style="?ItemUnlike_scene_aa"
	/>
	<SceneParams w:scene="@+id/scene_item_menu" w:scene_2="@+id/scene_item_menu_lu"
		style="?ItemUnlike_scene_item_menu"
	/>

	</com.maxmpz.widget.player.list.LikeUnlikeLayout>
	<!-- Keep all AA scenes as separate single SceneParams => modified by code. applyViewParams=true is requires to call onSceneParamsAdded on like unlike layout -->
	<SceneParams w:scene="@+id/scene_aa" w:scene_2="@+id/scene_aa_vis" w:scene_3="@+id/scene_aa_playing"
		style="?ItemLikeUnlikeLayout_scene_aa"
		w:applyViewParams="true"
	/>
	<SceneParams w:scene="@+id/scene_grid" w:scene_2="@+id/scene_grid_zoomed" w:scene_3="@+id/scene_zoomed" w:scene_4="@+id/scene_small"  
		android:visibility="invisible"
	/> 
	<SceneParams w:scene="@+id/scene_header"
		android:visibility="invisible"	
	/>
	<SceneParams w:scene="@+id/scene_item_menu"
		style="?ItemLikeUnlikeLayout_scene_item_menu"
	/>
	<SceneParams w:scene="@+id/scene_item_menu_lu"
		style="?ItemLikeUnlikeLayout_scene_item_menu_lu"
	/>
</merge>